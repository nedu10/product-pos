{{> navbar}}
<div class="container pt-5">
    <div class="row mt-5">
        <div class="col-md-6 mx-auto">
            <div class="card no-radius ">
                <div class="card-header font-weight-bold font-pos-16 bg-primary text-white" style="font-family:Pacifico;">
                    Sign Up
                </div>
                <form action="/users/signup" method="POST">
                    <div class="card-body">
                        {{#if hasOneMessage}}
                        <div class="alert alert-danger">
                            {{#each messages}}
                                <p>* {{this}}</p>
                            {{/each}}
                        </div>
                        {{/if}}
                        <div class="row justify-content-between">
                            <div class="form-group col-sm-6">
                                <label for="first_name">First Name</label>
                                <input type="text" class="form-control" id="first_name" name="first_name" aria-describedby="emailHelp" required>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="last_name">Last Name</label>
                                <input type="text" class="form-control" id="last_name" name="last_name" aria-describedby="emailHelp" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" required>
                        </div>
                        <div class="row justify-content-between">
                            <div class="form-group col-sm-6" > 
                                <label for="gender">Gender</label>
                                <select id="gender" name="gender" class="form-control" required>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="phone_no">Phone Number</label>
                                <input class="form-control" type="tel" name="phone_no" id="phone_no" required>
                            </div>
                        </div>
                        <div class="row justify-content-between">
                            <div class="form-group col-sm-6">
                                <label for="Password1">Password</label>
                                <input type="password" class="form-control" name="password1" id="Password1" required>
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="Password2">Confirm Password</label>
                                <input type="password" class="form-control" name="password2" id="Password2" required>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <input type="hidden" name="user_type" value="user">

                        
                        
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <button class="btn btn-primary" type="submit">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
